#!/bin/sh

PROMPTCMD="${PROMPTCMD:-"dmenu"}"
MENUCMD="${MENUCMD:-"xmenu"}"
TERMCMD="${TERMCMD:-"xterm"}"
EDITOR="${EDITOR:-"${VISUAL:-"vi"}"}"

term() {
	"$TERMCMD" -e "$@"
}

dialog() {
	term /bin/sh -c '
		cmd="$1"
		shift 1
		printf "\t%s\n" "$@"
		case "$cmd" in
		("cp")
			printf "Copy? [y/N] "
			;;
		("mv")
			printf "Move? [y/N] "
			;;
		("ln")
			printf "Link? [y/N] "
			;;
		("rm")
			printf "Send to trash? [y/N] "
			;;
		esac
		read -r arg
		case "$arg" in
		([Yy]*)      ;;
		(*)     exit ;;
		esac
		case "$cmd" in
		("cp")
			cp -v "$@" .
			;;
		("mv")
			mv -v "$@" .
			;;
		("ln")
			ln -s "$@" .
			;;
		("rm")
			trash "$@"
			;;
		esac
	' xfilesctl "$@"
}

drop() {
	dialog "$@"
}

snarf() {
	case "$#" in
	(0)
		# no file to copy
		return
		;;
	esac
	for arg
	do
		# prefix files with $PWD (they are given as relative paths)
		shift
		set -- "$@" "$PWD/$arg"
	done
	# send URIs to clipboard
	printf 'file://%s\r\n' "$@" |\
	xclip -selection clipboard -in -target "text/uri-list" &
}

paste() {
	cmd="$1"
	shift 1
	{
		# get URIs from clipboard
		xclip -selection clipboard -out -target "text/uri-list"
		echo
	} | sed 's,^file://,,' | tr -d '\r' | {
		set --
		while read -r f
		do
			case "$f" in
			("")
				;;
			(*)
				set -- "$@" "$f"
				;;
			esac
		done
		dialog "$cmd" "$@"
	}
}

dirmenu() {
	func="$1"
	shift 1
	case "$(
	"$MENUCMD" <<-EOF
		copy
		move
		link
		term
	EOF
	)" in
	("copy")
		"$func" "cp" "$@"
		;;
	("move")
		"$func" "mv" "$@"
		;;
	("link")
		"$func" "ln" "$@"
		;;
	("term")
		"$TERMCMD" &
		;;
	esac
}

filemenu() {
	case "$(
	"$MENUCMD" <<-EOF
		rename
		snarf
		trash
		edit
	EOF
	)" in
	("rename")
		term bulkrename "$@"
		;;
	("snarf")
		snarf "$@"
		;;
	("trash")
		trash "$@"
		;;
	("edit")
		"$TERMCMD" -e "$EDITOR" "$1"
		;;
	esac
}

changedir() {
	xprop -id "$WINDOWID" -format "_CONTROL_GOTO" 8u -set "_CONTROL_GOTO" "$1"
}

operation="$1"
shift 1
case "$operation" in
("menu")
	case "$#" in
	(0)
		dirmenu paste "$@"
		;;
	(*)
		filemenu "$@"
		;;
	esac
	;;
("drop-ask")
	dirmenu drop "$@"
	;;
("drop-copy")
	drop "cp" "$@"
	;;
("drop-move")
	drop "mv" "$@"
	;;
("drop-link")
	drop "ln" "$@"
	;;
(^BackSpace)
	# go up
	changedir ".."
	;;
(^F5|^[Rr])
	# cd to where we are just to refresh
	changedir "."
	;;
(^[LlGg])
	# call dmenu to go somewhere
	newdir="$("$PROMPTCMD" -w "$WINDOWID")"
	changedir "$newdir"
	;;
(^[Cc])
	# snarf files
	snarf "$@"
	;;
(^[Vv])
	# copy snarfed files
	paste "cp"
	;;
(^Delete)
	case "$#" in
	(0)
		# nothing to delete
		;;
	(*)
		dialog "rm" "$@"
		;;
	esac
	;;
esac

exit
