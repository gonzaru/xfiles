#!/bin/sh

MENUCMD="${MENUCMD:-"xmenu"}"
TERMCMD="${TERMCMD:-"xterm"}"
EDITOR="${EDITOR:-"${VISUAL:-"vi"}"}"

term() {
	"$TERMCMD" -e "$@"
}

dialog() {
	term /bin/sh -c '
		printf "\t%s\n" "$@"
		printf "'"$msg"'? [y/N] "
		read arg
		case "$arg" in
		([Yy]*)
			'"$cmd"' "$@" .
			;;
		esac
	' xfilesctl "$@"
}

drop() {
	cmd="$1"
	shift 1
	dialog "$@"
}

paste() {
	cmd="$1"
	shift 1
	{
		xsel -ob
		echo
	} | {
		set --
		while read f
		do
			case "$f" in
			("")
				;;
			(*)
				set -- "$@" "$f"
				;;
			esac
		done
		dialog "$@"
	}
}

dirmenu() {
	cmd="$1"
	shift 1
	case "$(
	"$MENUCMD" <<-EOF
		copy
		move
		link
		term
	EOF
	)" in
	("copy")
		msg="copy"
		"$cmd" "cp -v" "$@"
		;;
	("move")
		msg="move"
		"$cmd" "mv -v" "$@"
		;;
	("link")
		msg="link"
		"$cmd" "ln -s" "$@"
		;;
	("term")
		"$TERMCMD" &
		;;
	esac
}

filemenu() {
	case "$(
	"$MENUCMD" <<-EOF
		rename
		snarf
		trash
		edit
	EOF
	)" in
	("rename")
		term bulkrename "$@"
		;;
	("snarf")
		xsel -op | xsel -ib &
		;;
	("trash")
		trash "$@"
		;;
	("edit")
		"$TERMCMD" -e "$EDITOR" "$1"
		;;
	esac
}

cmd="$1"
shift 1
case "$cmd" in
("menu")
	case "$#" in
	(0)
		dirmenu paste "$@"
		;;
	(*)
		filemenu "$@"
		;;
	esac
	;;
("drop-ask")
	dirmenu drop "$@"
	;;
("drop-copy")
	msg="copy"
	drop "cp -v" "$@"
	;;
("drop-move")
	msg="move"
	drop "mv -v" "$@"
	;;
("drop-link")
	msg="link"
	drop "ln -s" "$@"
	;;
esac

exit
